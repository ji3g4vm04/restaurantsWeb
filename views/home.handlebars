{{! search bar }}
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <select name="type" id="type" class="form-control">
            <option value="name">餐廳名稱</option>
            <option value="category">類別</option>
          </select>
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value=""
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{{! restaurant list }}
{{#if restaurantList.length}}
  <div class="container mt-5 restaurants">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row row-cols-sm-3">
          {{#each restaurantList}}
            <div class="mb-3">
              <a href="/detail/{{_id}}" class="text-secondary">
                <div class="card">
                  <img class="card-img-top" src="{{image}}" alt="{{name}}" />
                  <div class="card-body p-3">
                    <h6 class="card-title mb-1">{{name}}</h6>

                    <div class="restaurant-category mb-1">
                      <i class="fas fa-utensils pr-2"></i>
                      {{category}}
                    </div>

                    <span class="badge-pill badge-danger font-weight-normal">
                      {{rating}}
                      <i class="fas fa-star fa-xs"></i>
                    </span>

                  </div>
                </div>
              </a>
              <ul class="nav justify-content-end">
                <li class="nav-item">
                  <a
                    class="nav-link active"
                    aria-current="page"
                    href="/edit/{{_id}}"
                  >
                    Edit
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">
                    Detail
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#" id="delete" data-id="{{_id}}">
                    Delete
                  </a>
                </li>
              </ul>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="container">
    <img src="./public/none.jpg" alt="" srcset="" />
  </div>
{{/if}}